{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ES2018",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/data/*": ["./src/data/*"]
    }
  }
}
