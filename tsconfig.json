{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ES2018",
    "moduleResolution": "Node",
    "importHelpers": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/data/*": ["./src/data/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"]
}
