---
import { serveFontSize } from "../helpers"
import type { HTMLTag, Polymorphic } from "astro/types"
import type { TypographyVariant } from "../types"

type DecorativeTexrProps<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
  text: string
  size?: string
}>

type Props = DecorativeTexrProps<TypographyVariant>

const { as: Tag = "p", text, size = "canon" } = Astro.props
---

<Tag class:list={["italic", "font-deco", "my-2", serveFontSize(size)]}>
  {text}
</Tag>
