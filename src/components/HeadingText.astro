---
import type { HTMLTag, Polymorphic } from "astro/types"
import type { HeadingVariant } from "../types"

type DecorativeTexrProps<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
  text: string
  size?: string | string[]
  uppercase?: boolean
}>

type Props = DecorativeTexrProps<HeadingVariant>

const {
  as: Tag = "p",
  text,
  size = "great-primer",
  uppercase = true,
} = Astro.props
---

<Tag
  class:list={[
    uppercase && "uppercase",
    "font-light",
    "font-sans",
    "text-balance",
    Array.isArray(size) ? [...size] : size,
  ]}
>
  {text}
</Tag>
