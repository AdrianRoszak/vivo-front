---
import type { HTMLTag, Polymorphic } from "astro/types"
import type { HeadingVariant } from "../types"

type DecorativeTexrProps<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
  text: string
  size?: string | string[]
}>

type Props = DecorativeTexrProps<HeadingVariant>

const { as: Tag = "p", text, size = "great-primer" } = Astro.props
---

<Tag
  class:list={[
    "uppercase",
    "font-light",
    "font-sans",
    "text-balance",
    [...size],
  ]}
>
  {text}
</Tag>
