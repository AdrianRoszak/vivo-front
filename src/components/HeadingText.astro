---
import { serveFontSize } from "../helpers"
import type { HTMLTag, Polymorphic } from "astro/types"
import type { HeadingVariant } from "../types"

type HeadingSize =
  | "canon"
  | "trafalgar"
  | "great-primer"
  | "long-primer"
  | "body-copy"
  | "double-pica"
  | "pica"
  | "paragon"
  | "brevier"
  | "minion"

type DecorativeTexrProps<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
  text: string
  size?: HeadingSize
}>

type Props = DecorativeTexrProps<HeadingVariant>

const { as: Tag = "p", text, size = "great-primer" } = Astro.props
---

<Tag
  class:list={[
    "uppercase",
    "font-extralight",
    "font-sans",
    "text-balance",
    serveFontSize(size),
  ]}
>
  {text}
</Tag>
