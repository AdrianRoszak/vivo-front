---
import { serveFontSize } from "../helpers"
import type { HTMLTag, Polymorphic } from "astro/types"
import type { HeadingVariant } from "../types"

type DecorativeTexrProps<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
  text: string
  size?: string
}>

type Props = DecorativeTexrProps<HeadingVariant>

const { as: Tag = "p", text, size = "long-primer" } = Astro.props
---

<Tag
  class:list={[
    "uppercase",
    "font-extralight",
    "font-sans",
    serveFontSize(size),
  ]}
>
  {text}
</Tag>
