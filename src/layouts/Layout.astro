---
import { SEO } from "astro-seo"
import { ViewTransitions } from "astro:transitions"

import Footer from "@/src/components/Footer.astro"
import Header from "@/src/components/Header.astro"
import Nav from "@/src/components/Nav.astro"
import Link from "@/src/components/Link.astro"
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer"
import { getGlobalData } from "@/src/data"
import { Icon } from "astro-icon/components"
import { getMedfile } from "@/src/data/presentation"
import Overlay from "@/src/components/Overlay.astro"

import "@/src/styles/globals.css"
import "@/src/styles/vars.css"
import FallingLeafs from "../components/FallingLeafs.astro"

interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
const { address, contact, name, socials } = await getGlobalData()

const medfile = await getMedfile()

const pathname = Astro.url.pathname.replace(/^\/+/, "")
const siteUrl = `${Astro.site}${pathname}`
---

<!doctype html>
<html lang="pl">
  <head>
    <SEO
      title={title}
      titleTemplate="%s  | Vivo"
      description={description}
      charset="UTF-8"
      canonical={siteUrl}
      openGraph={{
        basic: {
          title,
          type: "website",
          url: siteUrl,
          image: `/vivo-logo.jpg`,
        },
        optional: {
          description,
          locale: "pl_PL",
          siteName: "Poradnia Psychologiczno-Pedagogiczna VIVO",
        },
      }}
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap"
    />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Work+Sans:wght@200;400&display=swap"
    />
    <!-- TODO -->
    <ViewTransitions />
  </head>
  <body>
    <button
      weirdo-data-scroll="scroll-to-top"
      class:list={["scroll-to-top-icon", "social-icon-primary", "hidden"]}
    >
      <Icon size={50} name="f7:arrow-up-circle-fill" />
    </button>
    <Overlay />
    <FallingLeafs />
    <Header>
      <Nav
        socials={socials}
        registration={medfile}
        contact={{ email: contact.email, phone: contact.phone }}
      />
    </Header>
    <main>
      <slot />
    </main>
    <Footer>
      <div class="text-great-primer">
        <h1 class:list={["uppercase"]}>{name}</h1>
        <address
          class:list={["not-italic", "my-8", "flex", "flex-col", "gap-2"]}
        >
          <div>
            {address.street}
            {address.number}
          </div>
          <div>
            {address.zip}, {address.city}
          </div>
        </address>
        <div class:list={["flex", "flex-col", "my-4", "gap-2"]}>
          <Link href={`tel:${contact.phone}`}>
            <div class:list={["flex", "gap-2", "items-center"]}>
              <Icon size={30} name="f7:phone-fill" />
              {contact.phone}
            </div>
          </Link>
          <Link href={`mailto:${contact.email}`}>
            <div class:list={["flex", "gap-2", "items-center"]}>
              <Icon size={30} name="f7:envelope-fill" />
              {contact.email}
            </div>
          </Link>
        </div>
      </div>
    </Footer>
    <script>
      import { gsap } from "gsap"
      import { ScrollTrigger } from "gsap/ScrollTrigger"
      gsap.registerPlugin(ScrollTrigger)

      // Function to kill existing animations and reinitialize GSAP animations
      const initAnimations = () => {
        // Kill any existing ScrollTriggers or animations to avoid duplication
        ScrollTrigger.getAll().forEach((trigger) => trigger.kill())
        gsap.killTweensOf(".animate-fade-in, .animate-thumb")

        const animationItems =
          gsap.utils.toArray<HTMLElement>(".animate-fade-in")

        animationItems.forEach((item) => {
          gsap.to(item, {
            scrollTrigger: {
              trigger: item,
              start: "top 90%",
              refreshPriority: 1,
            },
            opacity: 1,
            y: 0,
            duration: 0.5,
            stagger: 0.2,
            ease: "power1.out",
          })
        })

        gsap.to(".value-tile", {
          scrollTrigger: {
            trigger: ".value-tile",
            start: "top 95%",
          },
          scale: 1,
          duration: 0.5,
          stagger: 0.2,
          ease: "power1.out",
          onStart: () => {
            gsap.to(".value-tile-content", {
              opacity: 1,
              duration: 0.2,
              stagger: 0.1,
              delay: 1.5,
            })
          },
        })

        gsap.to(".animate-thumb", {
          scrollTrigger: {
            trigger: ".animate-thumb",
            start: "top 90%",
          },
          scale: 1,
          stagger: {
            each: 0.1,
            from: "center",
            grid: "auto",
          },
        })

        // Select all elements with the class `.animate-article`
        const articleItems = gsap.utils.toArray<HTMLElement>(".animate-article")
        const isHome = window.location.pathname === "/"
        const isMobile = window.innerWidth <= 768 // Adjust based on mobile breakpoint

        if (isMobile) {
          // Mobile layout (1-column), animate each item individually
          articleItems.forEach((item, index) => {
            gsap.fromTo(
              item,
              { opacity: 0, y: 50 }, // Starting state
              {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                delay: index === 0 ? 1.5 : 0, // Add 1.5s delay for the first item only
                scrollTrigger: {
                  trigger: item, // Trigger animation when the item comes into view
                  start: "top 90%",
                  toggleActions: "play none none reverse", // Play/reverse on enter/leave
                  once: true, // Animation plays only once
                },
              },
            )
          })
        } else {
          // Desktop layout (3-column grid), animate items in rows of 3
          const rows: HTMLElement[][] = []
          for (let i = 0; i < articleItems.length; i += 3) {
            rows.push(articleItems.slice(i, i + 3))
          }

          rows.forEach((row, index) => {
            gsap.fromTo(
              row,
              { opacity: 0, y: 50 }, // Starting state for items in the row
              {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                stagger: 0.2, // Stagger between items in the row
                delay: index === 0 && !isHome ? 1.5 : 0, // Add 1.5s delay for the first row only
                scrollTrigger: {
                  trigger: row[0], // Use the first item in the row as the trigger
                  start: "top 90%", // Start the animation when the first item enters the view
                  toggleActions: "play none none reverse", // Reverse the animation when scrolling back up
                  once: true, // Animation plays only once
                },
              },
            )
          })
        }

        // Refresh ScrollTrigger to ensure proper setup after animations are reinitialized
        ScrollTrigger.refresh()
      }

      // Event listener for page load
      document.addEventListener("astro:page-load", () => {
        initAnimations()
      })

      // Scroll to top button logic remains unchanged
      const scrollToTopButton = document.querySelector(
        "[weirdo-data-scroll='scroll-to-top']",
      )
      if (scrollToTopButton) {
        window.addEventListener("scroll", () => {
          if (window.scrollY > 500) {
            scrollToTopButton.classList.remove("hidden")
          } else {
            scrollToTopButton.classList.add("hidden")
          }
        })
        scrollToTopButton.addEventListener("click", () => {
          window.scrollTo({
            top: 0,
            behavior: "smooth",
          })
        })
      }
    </script>
    <style>
      .scroll-to-top-icon {
        position: fixed;
        bottom: 30px;
        right: 30px;
        cursor: pointer;
        z-index: 1000;
        filter: drop-shadow(0 5px 5px rgba(0, 0, 0, 0.2));
      }
    </style>
  </body>
</html>
