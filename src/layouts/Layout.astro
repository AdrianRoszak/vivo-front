---
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
import Nav from "../components/Nav.astro"
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer"
import { getGlobalData } from "../data"

import "@/src/styles/globals.css"
import "@/src/styles/vars.css"
import Link from "../components/Link.astro"

interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
const { address, contact, name } = await getGlobalData()
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap"
    />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Work+Sans:wght@200;400&display=swap"
    />
  </head>
  <body>
    <Header>
      <Nav contact={contact.phone} />
    </Header>
    <main>
      <slot />
    </main>
    <Footer>
      <div class="text-great-primer">
        <h1 class:list={["uppercase"]}>{name}</h1>
        <address class:list={["not-italic", "my-4"]}>
          <div>
            {address.street}
            {address.number}
          </div>
          <div>
            {address.zip}, {address.city}
          </div>
        </address>
        <div class:list={["flex", "flex-col", "my-4"]}>
          <Link href={`tel:${contact.phone}`}>
            {contact.phone}
          </Link>
          <Link href={`mailto:${contact.email}`}>
            {contact.email}
          </Link>
        </div>
      </div>
    </Footer>
  </body>
</html>
